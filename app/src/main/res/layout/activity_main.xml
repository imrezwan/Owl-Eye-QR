<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFF"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    tools:context="com.rezwan_cs.owleyeqr.MainActivity">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:src="@drawable/pet_parent_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#433232"
        android:text="@string/help_text"
        android:padding="10dp"
        android:fontFamily="sans-serif-condensed"/>


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/edittext_bg"
        android:textColorHint="#5C5555"
        android:textColor="#433232"
        android:padding="12dp"
        android:hint="Enter number of QR..."
        android:inputType="number"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:textColor="#433232"
        android:textStyle="bold"
        android:paddingHorizontal="20dp"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/button_bg"
        android:text="Generate QR" />


    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#CDA63C"
        android:padding="15dp"
        android:layout_gravity="center" />

</LinearLayout>
